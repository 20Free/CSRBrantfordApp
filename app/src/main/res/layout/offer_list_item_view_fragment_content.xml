<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="20dp"
    tools:showIn="@layout/offer_list_item_view_fragment">

    <com.csrbrantford.csrbrantfordapp.campInfo.RoundedCornerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rounded_view_layout"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/offer_list_item_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/offer_list_item_button_title"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:textColor="#997B39"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_below="@+id/offer_list_item_button"
                    android:id="@+id/offer_list_item_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_below="@id/offer_list_item_title2"
                    android:id="@+id/offer_list_item_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </RelativeLayout>
        </ScrollView>
    </com.csrbrantford.csrbrantfordapp.campInfo.RoundedCornerLayout>
</RelativeLayout>