<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.csrbrantford.csrbrantfordapp.home.Home"
    tools:showIn="@layout/home_activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_hr"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#c9ffffff">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/scrollView"
                android:layout_alignParentEnd="true">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/musicButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:onClick="playMusic"
                    android:background="@drawable/icon_music"
                    android:contentDescription="@string/title_activity_music"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/photosButton"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:onClick="viewPhotoAlbums"
                    android:background="@drawable/icon_photos"
                    android:contentDescription="@string/title_activity_photoAlbums"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/videosButton"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="viewVideos"
                    android:background="@drawable/icon_videos"
                    android:contentDescription="@string/title_activity_videos"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/newsButton"
                    android:onClick="viewCampNews"
                    android:background="@drawable/icon_news"
                    android:layout_above="@+id/textView6"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/title_activity_news"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/suggestionsButton"
                    android:onClick="sendSuggestions"
                    android:background="@drawable/icon_make_camp_awesome"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/title_activity_suggestions"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/campInfoButton"
                    android:onClick="seeCampInfo"
                    android:background="@drawable/icon_faq"
                    android:layout_above="@+id/textView5"
                    android:layout_alignStart="@+id/textView4"
                    android:contentDescription="@string/title_activity_camp_info"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/whoButton"
                    android:onClick="learnAboutCSR"
                    android:background="@drawable/icon_who_we_are"
                    android:layout_alignTop="@+id/contactDirectionsButton"
                    android:layout_alignStart="@+id/textView5"
                    android:contentDescription="@string/title_activity_about_csr"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/contactDirectionsButton"
                    android:onClick="getContactDirections"
                    android:background="@drawable/icon_directions"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/title_activity_contact_directions"/>

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/settingsButton"
                    android:onClick="setSettings"
                    android:background="@drawable/icon_settings"
                    android:layout_alignTop="@+id/contactDirectionsButton"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/title_activity_settings"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_music"
                    android:id="@+id/textView"
                    android:layout_below="@+id/musicButton"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_alignEnd="@+id/musicButton"
                    android:paddingBottom="50dp"
                    android:textSize="15sp"
                    android:onClick="playMusic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_photoAlbums"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/photosButton"
                    android:layout_alignStart="@+id/photosButton"
                    android:layout_alignEnd="@+id/photosButton"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingBottom="50dp"
                    android:textSize="15sp"
                    android:onClick="viewPhotoAlbums"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_videos"
                    android:id="@+id/textView4"
                    android:layout_below="@+id/videosButton"
                    android:layout_alignStart="@+id/videosButton"
                    android:textStyle="bold"
                    android:layout_alignEnd="@+id/videosButton"
                    android:gravity="center_horizontal"
                    android:paddingBottom="50dp"
                    android:textSize="15sp"
                    android:onClick="viewVideos"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_news"
                    android:id="@+id/textView5"
                    android:layout_below="@+id/newsButton"
                    android:layout_alignEnd="@+id/newsButton"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:paddingBottom="50dp"
                    android:textSize="15sp"
                    android:onClick="viewCampNews"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_suggestions"
                    android:id="@+id/textView6"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_below="@+id/suggestionsButton"
                    android:layout_marginBottom="50dp"
                    android:onClick="sendSuggestions"
                    android:layout_alignStart="@+id/suggestionsButton"
                    android:layout_alignEnd="@+id/suggestionsButton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_camp_info"
                    android:id="@+id/textView7"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:paddingBottom="50dp"
                    android:layout_below="@+id/campInfoButton"
                    android:layout_alignStart="@+id/campInfoButton"
                    android:layout_alignEnd="@+id/campInfoButton"
                    android:onClick="seeCampInfo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_about_csr"
                    android:id="@+id/textView8"
                    android:layout_alignParentStart="true"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@+id/whoButton"
                    android:onClick="learnAboutCSR"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_contact_directions"
                    android:id="@+id/textView9"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_below="@+id/contactDirectionsButton"
                    android:layout_alignStart="@+id/contactDirectionsButton"
                    android:layout_alignEnd="@+id/contactDirectionsButton"
                    android:onClick="getContactDirections"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/title_activity_settings"
                    android:id="@+id/textView10"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_below="@+id/settingsButton"
                    android:layout_alignStart="@+id/settingsButton"
                    android:layout_alignParentEnd="true"
                    android:onClick="setSettings"/>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
